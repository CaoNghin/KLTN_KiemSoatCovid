@section scripts{

      

    <script>
           let UserName = $('#UserName').val();
           var IDSV=null;
        $(document).ready(function () {
       
            Load_IDSinhVien();
            Load_DSSinhVien_Combobox();
            Load_Danhsach_KhaiBaoCachLy();

            

            ValidateForm();
          
            //  var today = new Date();
            //let dd2 = String(today.getDate()).padStart(2, '0');
