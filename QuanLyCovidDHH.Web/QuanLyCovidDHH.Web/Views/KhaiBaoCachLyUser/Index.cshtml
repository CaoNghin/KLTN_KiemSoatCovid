        });
        function ResetForm() {
                     $('#doiTuongCachLy').val('');

                    $('#ngayBatDauCachLy').val(new Date());
                    $('#ngayKetThucCachLy').val(new Date());
        
            
           
                    $("#quyetDinhCachLy").val('');
       

            
          

        };
         function ThongBao(messenger) {
            $("#notiMessenger").empty();
            $("#notiMessenger").append(messenger);
            $("#btnConfirm").hide();
            $("#notification").modal();
        };
        function ValidateForm() {
            $("form[id='formKhaiBaoCachLy']").validate({
                rules: {
                    maKhoa: {
                        required: true,
                        minlength: 1,
                        maxlength: 50
                    },
                    tenKhoa: {
                        required: true,
                        minlength: 1,
                        maxlength: 50
                    },
                  
                   
                },
                messages: {
                    maKhoa: {
                        required: "Vui lòng nhập Mã khoa",
                        minlength: "Chiều dài phải lớn hơn 1 ký tự",
                        maxlength: "Chiều dài không vượt quá 50 kí tự"
                    },
                    tenKhoa: {
                        required: "Vui lòng nhập Tên khoa",
                        minlength: "Chiều dài phải lớn hơn 1 ký tự",
                        maxlength: "Chiều dài không vượt quá 50 ký tự"
                    },
                
                    
                },
                errorElement: 'div',
                errorLabelContainer: '.errorTxt',
                submitHandler: function (form) {
                }
            });
        }
        $('#btnAdd').click(function () {
            ResetForm();
            $("#btnSubmit").show();
            $("#ghiChuALL").hide();
            $("#lyDoALL").hide();
            $("#trangThaiDuyetALL").hide();
            $("#IDSinhVien").prop('disabled', true);
            $("#trangThaiDuyet").val('0').change();   
            $('#hiddenvalue').val(''); // Hidden id
            $('#modalKhaiBaoCachLy').modal();
        });
        function Load_Danhsach_KhaiBaoCachLy() {
            TaoBang();

            $.ajax({
                url: 'KhaiBaoCachLy/DanhSach',
                type: 'GET',
                data: {

                    IDSinhVien:IDSV,
                     IDKhoaHoc: null,
                    IDKhoa: null,
                    IDTruong: null,
                    DoiTuongCachLy:null,
      
                    Ngay:null,
                    TrangThaiDuyet:null
             

                },
                success: function (data) {
                            
                    if (data.code == 200) {
                        let stt = 0;
                 
                        $.each(data.khaibaocachly, function (key, value) {

                              stt = stt + 1;
                       
                             let tr = '<tr id="' + value.idKhaiBaoCachLy+ '">';
                            tr += '<td>' + stt + '</td>';  
                            tr += '<td>' + value.maSinhVien + '</td>';
                            tr += '<td>' + value.hoTen + '</td>';
                            tr += '<td>' + value.doiTuongCachLy + '</td>';
                   
                               //Convert Datetime to String
                            let ngayBatDauCachLy = new Date(value.ngayBatDauCachLy);
                         
                            let dd1 = String(ngayBatDauCachLy.getDate()).padStart(2, '0');
                            let mm1 = String(ngayBatDauCachLy.getMonth() + 1).padStart(2, '0'); //January is 0!
                            let yyyy1 = ngayBatDauCachLy.getFullYear();
                            ngayBatDauCachLy =  dd1 + '/' + mm1 + '/' + yyyy1;
                            tr += '<td>' + ngayBatDauCachLy + '</td>';
               
                             //Convert Datetime to String
                            let ngayKetThucCachLy = new Date(value.ngayKetThucCachLy);
                         
                            let dd2 = String(ngayKetThucCachLy.getDate()).padStart(2, '0');
                            let mm2 = String(ngayKetThucCachLy.getMonth() + 1).padStart(2, '0'); //January is 0!
                            let yyyy2 = ngayKetThucCachLy.getFullYear();
                            ngayKetThucCachLy =  dd2 + '/' + mm2 + '/' + yyyy2;
                            tr += '<td>' + ngayKetThucCachLy + '</td>';
                           
                          
                            if (value.quyetDinhCachLy  == null || value.quyetDinhCachLy  == '' ) {
                                    tr += '<td>Không có</td>';
                            }
                            else{
                               tr += '<td>' + value.quyetDinhCachLy + '</td>';
                            }
                            
                            
                            ////////////
                            if(value.trangThaiDuyet=='1'){
                                 tr += '<td>Đã duyệt</td>';
                            }
                            else{
                                  if(value.trangThaiDuyet=='0'){
                                         tr += '<td>Chưa duyệt</td>';
                                    }
                                    else{                                            
                                         tr += '<td>Đã huỷ</td>';                                        
                                     }
                            }

                        
                            //////////
                            tr += '<td>'
                            tr += '<button class="btn btn-sm" name="edit" style="color:green"><i class="fa fa-info-circle"></i></button>';
                            if(value.trangThaiDuyet =='0'){
                                    tr += '<button class="btn btn-sm" name="delete" style="color:red"><i class="fa fa-trash"></i></button>';
                            }
        
                            tr += '</td>'
                            tr += '</tr>'
                            $('#table-body').append(tr);
                        });
                   Load_PhanTrang();
                    }
                }
            });
        };

        $('#btnSearch').click(function () {


        
             let DoiTuongCachLy = $('#timkiem-timtheoDoiTuongCachLy').val().trim();

            let Ngay = $('#timkiem-timtheoNgay').val().trim();
            let TrangThaiDuyet = $('#timkiem-timtheoTrangThaiDuyet').val().trim();
            
            

            let tukhoa = $('#timkiem-timtheotukhoa').val();
            //alert(idtruong+idkhoa+idkhoahoc);
            $.ajax({
                url: 'KhaiBaoCachLy/DanhSach',
                type: 'GET',
                data: {
                    IDSinhVien:IDSV,     
                    IDKhoaHoc:null,
                    IDKhoa: null,
                    IDTruong: null,
                    DoiTuongCachLy:DoiTuongCachLy,
    
                    Ngay:Ngay,
                    TrangThaiDuyet:TrangThaiDuyet
              
                },
                success: function (data) {
               if (data.code == 200) {
                        let stt = 0;
              
                        $('#table-full').empty();
                       
                        TaoBang();
                         
                        $.each(data.khaibaocachly, function (key, value) {
                              stt = stt + 1;
                       
                             let tr = '<tr id="' + value.idKhaiBaoCachLy+ '">';
                            tr += '<td>' + stt + '</td>';  
                            tr += '<td>' + value.maSinhVien + '</td>';
                            tr += '<td>' + value.hoTen + '</td>';
                            tr += '<td>' + value.doiTuongCachLy + '</td>';
                                                
                            //Convert Datetime to String
                            let ngayBatDauCachLy = new Date(value.ngayBatDauCachLy);
                         
                            let dd1 = String(ngayBatDauCachLy.getDate()).padStart(2, '0');
                            let mm1 = String(ngayBatDauCachLy.getMonth() + 1).padStart(2, '0'); //January is 0!
                            let yyyy1 = ngayBatDauCachLy.getFullYear();
                            ngayBatDauCachLy =  dd1 + '/' + mm1 + '/' + yyyy1;
                            tr += '<td>' + ngayBatDauCachLy + '</td>';
               
                             //Convert Datetime to String
                            let ngayKetThucCachLy = new Date(value.ngayKetThucCachLy);
                         
                            let dd2 = String(ngayKetThucCachLy.getDate()).padStart(2, '0');
                            let mm2 = String(ngayKetThucCachLy.getMonth() + 1).padStart(2, '0'); //January is 0!
                            let yyyy2 = ngayKetThucCachLy.getFullYear();
                            ngayKetThucCachLy =  dd2 + '/' + mm2 + '/' + yyyy2;
                            tr += '<td>' + ngayKetThucCachLy + '</td>';
                           
                          
                            if (value.quyetDinhCachLy  == null || value.quyetDinhCachLy  == '' ) {
                                    tr += '<td>Không có</td>';
                            }
                            else{
                               tr += '<td>' + value.quyetDinhCachLy + '</td>';
                            }
                            
                            ////////////
                            if(value.trangThaiDuyet=='1'){
                                 tr += '<td>Đã duyệt</td>';
                            }
                            else{
                                  if(value.trangThaiDuyet=='0'){
                                         tr += '<td>Chưa duyệt</td>';
                                    }
                                    else{                                            
                                         tr += '<td>Đã huỷ</td>';                                        
                                     }
                            }

                         
                            //////////
                            tr += '<td>'
                            tr += '<button class="btn btn-sm" name="edit" style="color:green"><i class="fa fa-info-circle"></i></button>';
                            if(value.trangThaiDuyet =='0'){
                                    tr += '<button class="btn btn-sm" name="delete" style="color:red"><i class="fa fa-trash"></i></button>';
                            }
                            tr += '</td>'
                            tr += '</tr>'
                            $('#table-body').append(tr);
                        });
                        destroy();
                   //Load_PhanTrang();
                       
                    }
                }
            });
        });

       function ThongBao(messenger) {
            $("#notiMessenger").empty();
            $("#notiMessenger").append(messenger);
            $("#btnConfirm").hide();
            $("#notification").modal();
        };

         $('#btnSubmit').click(function () {
            let hiddenvalue = $('#hiddenvalue').val();


        



            let doiTuongCachLy = $('#doiTuongCachLy').val().trim();
            let ngayBatDauCachLy = $('#ngayBatDauCachLy').val().trim();
            let ngayKetThucCachLy = $('#ngayKetThucCachLy').val().trim();


            let fileQuyetDinhCachLy = $('#fileQuyetDinhCachLy')[0].files[0];
   
      


            let formData1 = new FormData();

            formData1.append('iDSinhVien', IDSV);
            formData1.append('doiTuongCachLy', doiTuongCachLy);
            formData1.append('ngayBatDauCachLy', ngayBatDauCachLy);
            formData1.append('ngayKetThucCachLy', ngayKetThucCachLy);

             
  
            formData1.append('fileQuyetDinhCachLy', fileQuyetDinhCachLy);
            formData1.append('trangThaiDuyet', '0');

            formData1.append('lyDo', '');
         
            formData1.append('ghiChu', '');
         

            let formData2 = new FormData();
            formData2 = formData1;
            formData2.append('iDKhaiBaoCachLy', hiddenvalue);
            formData2.append('quyetDinhCachLy', $("#quyetDinhCachLy").text());
                
            //formData2.append('trangThai', trangThai);
           
          

            if ($("#formKhaiBaoCachLy").valid()) {
                if (hiddenvalue.length == 0) {
                    //Thêm mới
                    $.ajax({
                        url: '/KhaiBaoCachLy/TaoMoi',
                        type: 'POST',
                        data: formData1,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            if (data.code == 200) {
                                console.log(formData1);
                                ResetForm();
                                $('#table-body').empty();
                                        $('#btnSearch').click();
                                $('#btnClose').click();
                                ThongBao(data.msg);
                                
                         
                           
                            } else {
                                $('#btnClose').click();
                                ThongBao(data.msg);
                            }
                        }
                    });
                }
                else if (hiddenvalue.length != 0) {
                    //Chỉnh sửa

                    $.ajax({
                        url: '/KhaiBaoCachLy/ChinhSua',
                        type: 'PUT',
                        data: formData2,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            if (data.code == 200) {
                                $('#table-body').empty();
                                  $('#btnSearch').click();
                                $('#btnClose').click();
                                ThongBao(data.msg);
                            } else {
                                $('#btnClose').click();
                                ThongBao(data.msg);
                            }
                        }
                    })
                }
            }
        });

         $(document).on('click', "button[name='edit']", function () {
            ResetForm();
        
      
            //$('#trangThai').show();
            let id = $(this).closest('tr').attr('id');
            $('#hiddenvalue').val(id);

                $("#IDSinhVien").prop('disabled', true);
                $("#trangThaiDuyet").prop('disabled', true);  
             
             
            $.ajax({
                url: '/KhaiBaoCachLy/LayTheoID',
                type: 'GET',
                data: { id: id },
                success: function (data) {

                    if(data.khaibaocachly.trangThaiDuyet =='0'){
                            $("#btnSubmit").show();
                            $("#ghiChuALL").hide();
                            $("#lyDoALL").hide();
                             $("#trangThaiDuyetALL").hide();
                    }
                    else{
                            $("#btnSubmit").hide();
                            $("#ghiChuALL").show();
                            $("#lyDoALL").show();
                            $("#trangThaiDuyetALL").show();
                            $("#lyDo").prop('disabled', true);  
                            $("#ghiChu").prop('disabled', true);  
                    }
            
                $("#IDSinhVien").val(data.khaibaocachly.idSinhVien).change();   
          
              
                  
                   $('#doiTuongCachLy').val(data.khaibaocachly.doiTuongCachLy).change(); 
           

                    //////////////////////////////////
                     let ngayBatDauCachLy = new Date(data.khaibaocachly.ngayBatDauCachLy);
                           
                            let dd1 = String(ngayBatDauCachLy.getDate()).padStart(2, '0');
                            let mm1 = String(ngayBatDauCachLy.getMonth() + 1).padStart(2, '0'); //January is 0!
                            let yyyy1 = ngayBatDauCachLy.getFullYear();
                      
                    $('#ngayBatDauCachLy').val(yyyy1+"-"+mm1+"-"+dd1);

                    //////////////////////////////////
                     let ngayKetThucCachLy = new Date(data.khaibaocachly.ngayKetThucCachLy);
                           
                            let dd2 = String(ngayKetThucCachLy.getDate()).padStart(2, '0');
                            let mm2 = String(ngayKetThucCachLy.getMonth() + 1).padStart(2, '0'); //January is 0!
                            let yyyy2 = ngayKetThucCachLy.getFullYear();
                      
                    $('#ngayKetThucCachLy').val(yyyy2+"-"+mm2+"-"+dd2);
             
          

                 
                    $('#quyetDinhCachLy').text(data.khaibaocachly.quyetDinhCachLy);
                    $("#quyetDinhCachLy").attr("href",  "\\files\\KhaiBaoCachLy\\" +data.khaibaocachly.quyetDinhCachLy);
                     $("#trangThaiDuyet").val(data.khaibaocachly.trangThaiDuyet).change();   
                            
                    $('#lyDo').val(data.khaibaocachly.lyDo);  
                    $('#ghiChu').val(data.khaibaocachly.ghiChu);               
                 
                    $('#modalKhaiBaoCachLy').modal();
                }

            });
            $.ajax({
                url: '/FileUpload/LayTheoDoiTuongID',
                type: 'get',
                data: { doiTuongID: id },
                success: function (data) {
                    for (let i = 0; i < data.files.length; i++) {
                        if (data.files[i].sttTep === 1) {
                            $('#quyetDinhCachLy').attr('href', data.files[i].noiLuuTru);
                        }
                        //if (data.files[i].sttTep === 2) {
                        //    $('#file-name-2').attr('href', data.files[i].noiLuuTru);
                        //}
                    }
                }
            });
         });
        $(document).on('click', "button[name='delete']", function () {
            let id = $(this).closest('tr').attr('id');
            var noti = confirm("Bạn có muốn xóa không?");
            if (noti == true) {
                $.ajax({
                    url: 'KhaiBaoCachLy/XoaBo',
